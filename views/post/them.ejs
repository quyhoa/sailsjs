<form action="/file/upload" method="POST" enctype="multipart/form-data" ng-app="Upload" ng-controller="UploadCtrl">
	<div class="form-group">
	    <label for="title">Tên bài viết:</label>
	    <input type="text" class="form-control" id="title" name="title">
	</div>
	<div class="form-group">
	    <label for="pwd">Nội dung:</label>
	    <input type="text" class="form-control" id="pwd" name="content">
	</div>
	<div class="form-group">
	    <label>Ảnh:</label>
	    <input type="file" class="form-control" id="file" name="image">
	</div>
	<div class="form-group">
	    <label for="sel1">Người đăng tin:</label>
	      <select class="form-control" id="sel1" name="user_id">
	        <option ng-repeat="user in users" value="{{user.id}}">{{user.username}}</option>
	      </select>
	</div>
	<button type="submit" class="btn btn-default">Add new post</button>
</form>